@model QuanLyNhanVien.Models.NhanVien

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa Nhân Viên</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Xóa nhân viên @(Model.HoVaTen)</h4>
    @if (Request.QueryString["error"] == "True")
    {
        <div class="alert alert-danger">Không thể xóa nhân viên vì nhân viên hiện tại là trưởng phòng ban</div>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.HoVaTen)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoVaTen)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>

        <dd>
            @(Model.GioiTinh?"Nam":"Nữ")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SoCanCuoc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoCanCuoc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.idChucVu)
        </dt>

        <dd>
            @(Model.ChucVu==null?"":Model.ChucVu.TenChucVu)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ibPhongBan)
        </dt>

        <dd>
            @(Model.PhongBan==null?"":Model.PhongBan.TenPhongBan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.idDuAn)
        </dt>

        <dd>
            @(Model.idDuAn!=null? Model.DuAn1.TenDuAn:"Không tham gia dự ")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="hidden" value="@Model.id" id="id" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
